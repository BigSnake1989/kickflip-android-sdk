<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.kickflip.sdk.fragment.BroadcastFragment">

    <io.kickflip.sdk.GLCameraEncoderView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Spinner
        android:id="@+id/filterSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:tag="filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageButton
        android:id="@+id/cameraFlipper"
        android:tag="camera"
        android:background="@drawable/transparent_button_bg"
        android:src="@drawable/ic_camflip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/status_bar_margin"
        android:layout_marginRight="@dimen/nav_bar_margin"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/recordButton"
        android:background="@drawable/red_dot"
        android:padding="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/liveLabel"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/status_bar_margin"
        android:background="@drawable/live_bg"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/live"
        android:clickable="true"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

</RelativeLayout>
